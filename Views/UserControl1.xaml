<UserControl x:Class="TestAnimal.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestAnimal"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel   >            
            <TextBlock Text="id" />
            <TextBox Text="{Binding id}" Width="100" HorizontalAlignment="Left" />
            <TextBlock Text="масса" />
            <TextBox Text="{Binding mass}" Width="100" HorizontalAlignment="Left"/>
            <TextBlock Text="имя" />
            <TextBox Text="{Binding name}" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
